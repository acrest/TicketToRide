<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alec.phase_05">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ticket_to_ride_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Client.UI.LogInActivity"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".Client.UI.LobbyActivity"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".Client.UI.GameStationActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".Client.UI.TicketToRideActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TicketMapActivity"
            android:label="@string/title_activity_ticket_map"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Client.UI.TestActivity"></activity>
    </application>

</manifest>