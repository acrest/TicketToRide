<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation='vertical'
        android:background="#66EEEEEE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/choose_destination_prompt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:text="@string/dialog_dest_selection_prompt"
                android:gravity="center"
                android:textSize="45dp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000000">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/firstCardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25">

                    <TextView
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:text="TEST"
                        android:id="@+id/firstCard"
                        android:clickable="true"/>

                    <Button
                        android:id="@+id/dialog_see_map_button1"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="@string/seeMap"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/secondCardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25">

                    <TextView
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:text="TEST"
                        android:id="@+id/secondCard"
                        android:clickable="true"/>

                    <Button
                        android:id="@+id/dialog_see_map_button2"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="@string/seeMap"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thirdCardLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25">

                    <TextView
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:text="TEST"
                        android:id="@+id/thirdCard"
                        android:clickable="true"/>

                    <Button
                        android:id="@+id/dialog_see_map_button3"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="@string/seeMap"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:layout_marginBottom="5dp">

            <Button
                android:text="@string/done_button"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/doneButton"
                android:layout_weight="1"
                android:enabled="false" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

