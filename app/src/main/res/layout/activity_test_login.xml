<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@mipmap/log_in"
    tools:context="com.example.alec.phase_05.Client.UI.TestLoginActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <LinearLayout
            android:background="#AAFFFFFF"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.55">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25">

                    <TextView
                        android:id="@+id/test_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/num_players_test"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"
                        android:layout_centerInParent="true"
                        android:textSize="20dp"
                        />
                    <EditText
                        android:id ="@+id/number_of_players_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="1"
                        android:text="2"
                        android:textSize="24dp"
                        android:paddingTop="60dp"
                        android:layout_centerHorizontal="true" />
                    <Button
                        android:id="@+id/log_in_button_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="7dp"
                        android:textSize="15dp"
                        android:text="@string/test_dialog"
                        />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


