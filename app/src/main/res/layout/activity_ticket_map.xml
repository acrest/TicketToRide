<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_ticket_map"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:background="@mipmap/oldMap"
tools:context="com.example.alec.phase_05.Client.UI.TicketToRideMapActivity">

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="0dp"
    android:layout_weight="0.48"
    android:background="#AA000000"
    android:orientation="vertical"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp">


    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="70dp"
        android:background="#303030">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="Train Cards"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/textView2" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_train_card_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.86">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:text="Player information"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/textView3" />


</LinearLayout>

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="0dp"
    android:layout_weight="0.48"
    android:background="#AA000000"
    android:orientation="vertical"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:background="#303030">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="Chat"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="0.86">-->
    <!--</LinearLayout>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.86">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create_game_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="25dp"
            android:text="Write message"
            android:textSize="13dp"/>

    </LinearLayout>

</LinearLayout>

</LinearLayout>

