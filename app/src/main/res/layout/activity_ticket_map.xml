<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_ticket_map"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
android:background="@mipmap/oldMap"
tools:context="com.example.alec.phase_05.Client.UI.TicketToRideMapActivity">

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="0dp"
    android:layout_weight="0.48"
    android:background="#AA000000"
    android:orientation="vertical"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp">


    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="70dp"
        android:background="#303030">



        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.29"
            android:text="Train Cards"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/textView2" />

        <TextView
            android:id="@+id/red_cars"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="9dp"
            android:layout_height="10dp"
            android:background="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/orange_cars"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="9dp"
            android:layout_height="10dp"
            android:background="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/yellow_cars"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="9dp"
            android:layout_height="10dp"
            android:background="#FF0" />

        <TextView
            android:id="@+id/green_cars"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="9dp"
            android:layout_height="10dp"
            android:background="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/blue_cars"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="9dp"
            android:layout_height="10dp"
            android:background="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/purple_cars"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="9dp"
            android:layout_height="10dp"
            android:background="@android:color/holo_purple" />

        <TextView
            android:id="@+id/black_cars"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="9dp"
            android:layout_height="10dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/white_cars"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="9dp"
            android:layout_height="10dp"
            android:background="@android:color/white" />



        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="28dp"
            android:layout_marginLeft="-105dp"
            android:id="@+id/rec_train_card_list"
            android:layout_width="270dp"
            android:layout_height="match_parent">



        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="Player information"
        android:layout_marginTop    ="10dp"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/textView3" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="-130dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/rec_player_info_list"
        android:layout_width="270dp"
        android:layout_height="149dp">


    </android.support.v7.widget.RecyclerView>


</LinearLayout>

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="0dp"
    android:layout_weight="0.48"
    android:background="#AA000000"
    android:orientation="vertical"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:background="#303030">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="Chat"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="0.86">-->
    <!--</LinearLayout>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.86">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create_game_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="25dp"
            android:text="Write message"
            android:textSize="13dp"/>

    </LinearLayout>

</LinearLayout>

</LinearLayout>

