<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="30dp"/>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/player_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/old_map"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#AA000000"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/header"
                            android:orientation="horizontal"
                            android:text="Train Cards"
                            android:textColor="#FFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".111"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/red"
                                android:id="@+id/red_train" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/red_cards"
                                android:text="1"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".111"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/orange"
                                android:id="@+id/orange_train" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/orange_cards"
                                android:text="2"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".111"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/yellow"
                                android:id="@+id/yellow_train" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/yellow_cards"
                                android:text="3"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".111"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/green"
                                android:id="@+id/green_train" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/green_cards"
                                android:text="4"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".111"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/images"
                                android:id="@+id/blue_train" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/blue_cards"
                                android:text="5"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".111"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/purple"
                                android:id="@+id/purple_train" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/purple_cards"
                                android:text="6"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".111"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/white"
                                android:id="@+id/white_train" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/white_cards"
                                android:text="7"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".111"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/black"
                                android:id="@+id/black_train" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/black_cards"
                                android:text="8"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".111"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@mipmap/rainbow"
                                android:id="@+id/rainbow_train" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/rainbow_cards"
                                android:text="9"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:textAlignment="center"
                            android:textColor="#FFF"
                            android:text="Player"
                            android:id="@+id/player" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:textAlignment="center"
                            android:textColor="#FFF"
                            android:text="Points"
                            android:id="@+id/points" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:textAlignment="center"
                            android:textColor="#FFF"
                            android:text="Trains"
                            android:id="@+id/train_number" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:textAlignment="center"
                            android:id="@+id/card_number"
                            android:textColor="#FFF"
                            android:text="Cards" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:textAlignment="center"
                            android:id="@+id/routes_number"
                            android:textColor="#FFF"
                            android:text="Routes" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/player_stats"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/longest_route_text"
                            android:textColor="#FFF"
                            android:text=" has the longest route of " />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/routes"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@mipmap/old_map"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.48"
                    android:background="#AA000000"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Routes:"
                        android:textColor="#FFF" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/routes_list"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:background="#AAE0E0E0">
                    </android.support.v7.widget.RecyclerView>

                    <Button
                        android:id="@+id/draw_routes_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:text="Draw Route Cards"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/game_history"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@mipmap/old_map"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.48"
                    android:background="#AA000000"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/games_history_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#AAE0E0E0">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/bank"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity = "center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageButton
                        android:id="@+id/deck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="20dp"
                        android:background="@null"
                        android:src="@drawable/back" />

                    <ImageButton
                        android:id="@+id/destdeck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:background="@null"
                        android:src="@drawable/ticket" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#AA000000"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/card2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/back" />


                    <ImageButton
                        android:id="@+id/card1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/back" />


                    <ImageButton
                        android:id="@+id/card3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/back" />


                    <ImageButton

                        android:id="@+id/card4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/back" />


                    <ImageButton
                        android:id="@+id/card5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/back" />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/mapview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity = "center"
                android:orientation="horizontal">

                <ImageView
                    android:id = "@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/tickettoridemap"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/placeRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="PLACE ROUTE"/>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/chat"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@mipmap/old_map"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.48"
                    android:background="#AA000000"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rec_chat_list"
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        android:background="#AAE0E0E0">
                    </android.support.v7.widget.RecyclerView>
                    <EditText
                        android:id="@+id/EditTextChat"
                        android:background="#E0E0E0"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:hint="@string/chat_message"
                        android:textColorHint="@android:color/black"
                        android:textAlignment="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/create_chat_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="25dp"
                            android:text="Post message"
                            android:textSize="13dp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>


</TabHost>

